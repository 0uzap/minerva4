{% extends 'base.html.twig' %}

{% block title %}{{parent()}}FAQ{% endblock %}

{% block body %}
<h1 class="text-center mt-4 pt-4 display-1 fw-bold titre"> FAQ </h1>

<div class="container-fluid" id="container-fluid-faq">
  {% if is_granted('ROLE_USER') %}
  <button class="accordion">Poser une question</button>
  <div class="panel">
    <div class="card vuefaq mx-auto" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title text-center">Poser une question</h5>
        <p class="card-text">{{ form(form) }}</p>
      </div>
    </div>
  </div>
  {% endif %}

  {% for faq in faq %}
  <button class="accordion">{{ faq.question }}</button>

  <div class="panel">
    <p>{{ faq.reponse }}</p>
    {% if is_granted('ROLE_ADMIN') %}
    <div>
      <a href="{{ path('modifierFaq', {'id': faq.id}) }}" class="btn btn-primary me-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen"
          viewBox="0 0 16 16">
          <path
            d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
        </svg>
      </a>
    </div>
    {% endif %}
  </div>
  {% endfor %}
</div>
{% endblock %}